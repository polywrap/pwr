{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2019"],
    "rootDir": "src",
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "downlevelIteration": true,
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./**/.polywrap/**/*.ts"
  ]
}
